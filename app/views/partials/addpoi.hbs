<!--Form for a user to add a Poi-->
<div class="uk-card uk-card-default uk-card-body uk-box-shadow-large">
  <h3 class="uk-card-title uk-text-center">Please enter details below</h3>
  <form action="/addpoi" method="POST" enctype="multipart/form-data" >
    <div class="uk-margin uk-text-left">
      <label class="uk-form-label" for="form-stacked-text">Name of Point of Interest</label>
      <div class=" uk-inline uk-width-1-1">
        <span class="uk-form-icon" uk-icon="icon: user"></span>
        <input class="uk-input uk-form-large" type="text" placeholder="Give this poi a name" name="name" />
      </div>
    </div>
    <div class="uk-margin uk-text-left">
      <label class="uk-form-label" for="form-stacked-text">Description</label>
      <div class=" uk-inline uk-width-1-1">
        <span class="uk-form-icon" uk-icon="icon: comment"></span>
        <input class="uk-input uk-form-large" type="text" placeholder="Enter a brief description" name="description" />
      </div>
    </div>
    <div class="uk-margin uk-text-left">
      <label class="uk-form-label" for="form-stacked-text">Location</label>
      <div class=" uk-inline uk-width-1-1">
        <span class="uk-form-icon" uk-icon="icon: comment"></span>
        <input class="uk-input uk-form-large" type="text" placeholder="e.g. Waterford, Tramore, Dunmore East" name="location" />
      </div>
    </div>
    <div class="uk-margin  uk-width-1-2@m uk-text-left">
      <label class="uk-form-label" for="form-stacked-select">Categories (select from dropdown menu)</label>
      <div class="uk-form-controls">
        <select name="category" class="uk-select" id="form-stacked-select">
          {{#each categories}}
            <option value="{{name}}">{{name}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    <div class="uk-margin">
      <label class="uk-form-label" for="form-horizontal-text">Select Image</label>
      <div class="uk-form-controls">
        <input type="file" class="uk-input" name="imagefile" accept="image/png, image/jpeg, image/jpg">
      </div>
    </div>
    <div class="uk-margin">
      <button class="uk-button uk-button-primary uk-button-large uk-width-1-1">Submit
      </button>
    </div>
  </form>
  {{> error}}
</div>
