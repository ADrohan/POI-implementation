<!-- Form to Update a Poi -->
<div class="uk-card uk-card-default uk-card-body uk-box-shadow-large">
  <h3 class="uk-card-title uk-text-center">Update your Poi: </h3>
  <form action="/updatepoi/{{poi._id}}" method="POST">
    <div class="uk-margin">
      <label class="uk-form-label" for="form-stacked-text">Name of Point of Interest</label>
      <div class="uk-inline uk-width-1-1">
        <span class="uk-form-icon" uk-icon="icon: user"></span>
        <input class="uk-input uk-form-large" type="text" name="name" value="{{poi.name}}" />
      </div>
    </div>
    <div class="uk-margin uk-text-left">
      <label class="uk-form-label" for="form-stacked-text">Description</label>
      <div class="uk-inline uk-width-1-1">
        <span class="uk-form-icon" uk-icon="icon: comment"></span>
        <input class="uk-input uk-form-large" type="text" name="description" value="{{poi.description}}" />
      </div>
    </div>
    <div class="uk-margin uk-text-left">
      <label class="uk-form-label" for="form-stacked-text">Location</label>
      <div class="uk-inline uk-width-1-1">
        <span class="uk-form-icon" uk-icon="icon: comment"></span>
        <input class="uk-input uk-form-large" type="text" name="location" value="{{poi.location}}" />
      </div>
    </div>
    <div class="uk-margin uk-text-left">
      <label class="uk-form-label" for="form-stacked-text">Category</label>
      <select class="uk-select" id="form-stacked-select" name="category" class="ui fluid dropdown" value="{{poi.category.name}}">
        {{#each categories}}
          <option value="{{name}}">{{name}}</option>
        {{/each}}
      </select>
    </div>
    <div class="uk-margin">
      <button class="uk-button uk-button-primary uk-button-large uk-width-1-1">Save
      </button>
    </div>
  </form>
  {{> error}}
</div>


